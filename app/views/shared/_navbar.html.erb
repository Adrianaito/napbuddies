<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to events_path, class: "navbar-brand d-flex align-items-center" do %>
  <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTzTyGtVXiY3l42GSoWqOaNhDEnhn4wG-lPyQ&usqp=CAU" %>
    <div id="typewriter">
      <p>Never <strong>FEEL ALONE</strong>...</p>
    </div>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item active">
        <%= link_to "Home", events_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <% if current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key, width: 200, height: 200, crop: :fill, gravity: :face,  class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
           <%= image_tag "napbaby.webp", alt: "nap baby", class: "avatar dropdown-toggle", style: "object-fit: cover", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Profile", profile_path(current_user), class: "dropdown-item" %>
          <%= link_to "Events", events_path, class: "dropdown-item" %>
          <%= link_to "New event", new_event_path, class: "dropdown-item" %>
          <%= link_to "Dashboard", dashboard_path, class: "dropdown-item"  %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
